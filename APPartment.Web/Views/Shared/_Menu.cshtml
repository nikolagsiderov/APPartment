@{
    var area = this.ViewContext.RouteData.Values["area"];
    var controller = this.ViewContext.RouteData.Values["controller"].ToString();
    var action = this.ViewContext.RouteData.Values["action"].ToString();

    var areaName = string.Empty;

    if (area != null)
    {
        areaName = area.ToString();
    }

    string homeLink = string.Empty;
    string calendarLink = string.Empty;
    string inventoryLink = string.Empty;
    string issuesLink = string.Empty;
    string surveysLink = string.Empty;
    string choresLink = string.Empty;
    string roommatesLink = string.Empty;
    string settingsLink = string.Empty;


    if ((string.IsNullOrEmpty(areaName) || areaName.Equals("default")) && controller.Equals("Home") && action.Equals("Index"))
    {
        homeLink = "active";
    }
    else if (!string.IsNullOrEmpty(areaName) && (areaName.Equals("default") && controller.Equals("Calendar") && action.Equals("Index")))
    {
        calendarLink = "active";
    }
    else if (areaName.Equals("Inventory"))
    {
        inventoryLink = "active";
    }
    else if (areaName.Equals("Issues"))
    {
        issuesLink = "active";
    }
    else if (areaName.Equals("Surveys"))
    {
        surveysLink = "active";
    }
    else if (areaName.Equals("Chores"))
    {
        choresLink = "active";
    }
    else if (areaName.Equals("Roommates"))
    {
        roommatesLink = "active";
    }
    else if (!string.IsNullOrEmpty(areaName) && (areaName.Equals("default") && controller.Equals("Home") && action.Equals("Settings")))
    {
        settingsLink = "active";
    }
}

<div id="layoutSidenav_nav">
    <nav class="sidenav shadow-right sidenav-light">
        <div class="sidenav-menu">
            <div class="nav accordion" id="accordionSidenav">
                <div class="sidenav-menu-heading"></div>
                <a class="nav-link @homeLink" asp-area="default" asp-controller="Home" asp-action="Index">
                    <div class="nav-link-icon"><i class="fas fa-home"></i></div>
                    Home
                </a>
                <a class="nav-link @calendarLink" asp-area="default" asp-controller="Calendar" asp-action="Index">
