                        <a class="nav-link" asp-area="Surveys" asp-controller="Surveys" asp-action="Index"><i class="fas fa-tasks"></i> &nbsp; Manage</a>
                    </nav>
                </div>
                <div class="sidenav-menu-heading">More</div>
                <a class="nav-link @roommatesLink" asp-area="Roommates" asp-controller="Roommates" asp-action="Index">
                    <div class="nav-link-icon"><i class="fa fa-users"></i></div>
                    Roommates
                </a>

                <a class="nav-link @settingsLink" asp-area="default" asp-controller="Home" asp-action="Settings">
                    <div class="nav-link-icon"><i class="fas fa-cog"></i></div>
                    Settings
                </a>
            </div>
        </div>
        <div class="sidenav-footer">
            <div class="sidenav-footer-content">
                <div class="sidenav-footer-subtitle">Logged in as:</div>

                @using Microsoft.AspNetCore.Http

                <div class="sidenav-footer-title">@Context.Session.GetString("Username")</div>
            </div>
        </div>
    </nav>
</div>