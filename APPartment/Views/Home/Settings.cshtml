@model APPartment.Data.Models.Core.HomeSettings

<div class="row">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Home settings</h6>
            </div>
            <div class="card-body">
                <form asp-action="Settings" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ObjectId" />

                    <div class="form-group">
                        <label asp-for="HomeName" class="control-label">Change home name</label>

                        @if (Model != null)
                        {
                            <input asp-for="HomeName" class="form-control" />
                        }
                        else
                        {
                            <input asp-for="HomeName" class="form-control" value="@ViewData["HomeName"]" />
                        }

                        <span asp-validation-for="HomeName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RentDueDateDay" class="control-label">Rent due in</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Day</label>
                            </div>
                            <select class="custom-select" asp-for="RentDueDateDay" id="inputGroupSelect01">
                                <option selected value="0">Please select rent due date day of the month.</option>
                                @for (int i = 1; i <= 30; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                        <span asp-validation-for="RentDueDateDay" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
