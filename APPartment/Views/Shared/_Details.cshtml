@model APPartment.UI.ViewModels.Base.PostViewModel

@{
    var header = string.Format("ID: {0}, Name: {1}", Model.ObjectId, Model.Name);
}

<div class="card">
    <div class="card-header">
        @header
    </div>
    <div class="card-body">
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-edit"></i> &nbsp; Edit</a>
        </div>

        <br />

        @foreach (var property in ViewData.ModelMetadata.Properties)
        {
            <div class="editor-field">
                @Html.Display(property.PropertyName)
            </div>
        }
    </div>
</div>

<br />

<div class="card">
    <div class="card-body">
        @await Html.PartialAsync("_ObjectMetadataTab", Model)
    </div>
</div>